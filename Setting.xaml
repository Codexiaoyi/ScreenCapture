<Window x:Class="ScreenCaptureDemo.Setting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenCaptureDemo"
        mc:Ignorable="d" ResizeMode="NoResize" 
        Title="Setting" Height="300" Width="200">
    <StackPanel Orientation="Vertical" >
        <CheckBox x:Name="MyCheckBox" Content="是否开机自动启动" Margin="30,50,0,0" Width="150" Height="30" HorizontalAlignment="Center" />
        <Button Margin="100,120,0,0" Content="确定" Width="40" Height="30" FontSize="15" Click="Button_Click"/>
    </StackPanel>
</Window>
